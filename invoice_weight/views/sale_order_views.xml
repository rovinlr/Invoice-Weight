<odoo>
    <record id="view_order_form_inherit_weight" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.weight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/*[self::tree or self::list]//field[@name='product_uom_qty']" position="after">
                <field name="peso_neto" />
                <field name="peso_total" />
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                <field name="peso_neto" />
                <field name="peso_total" />
            </xpath>
        </field>
    </record>
</odoo>
