<odoo>
    <record id="view_move_form_inherit_weight" model="ir.ui.view">
        <field name="name">account.move.form.inherit.weight</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/*[self::tree or self::list]//field[@name='quantity']" position="after">
                <field name="peso_neto" />
                <field name="peso_total" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='quantity']" position="after">
                <field name="peso_neto" />
                <field name="peso_total" />
            </xpath>
        </field>
    </record>
</odoo>
